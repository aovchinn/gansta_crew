extends layout

block content
  h1 Login
  - if (messages.error)
    .alert.alert-danger
      span= messages.error
  form(method="POST")
    div.field
      label Login
      input(type="text" name="login")
    div.field
      label Password
      input(type="password" name="password")
    button(type="submit" name="submit") Sign in
